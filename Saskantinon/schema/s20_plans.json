{
"plans": {
        "avatar_motion.request_response": {
            "client_type": ["transactional"],
            "action": {
                "evaluate_move": ["request", "response"],
                "do_move": ["request", "request_cancel",
                            "response", "log_response",
                            "response_cancel"]}
        },
        "avatar_motion.broadcast": {
            "client_type": ["polling", "event-driven"],
            "action": {
                "notify": ["recipient_list",
                    {"trigger":
                        {"topic": "avatar_motion.request_response",
                            "plan": "do_move", "service": "log_response"}}]}
        },
        "marketplace.datatype_requests": {
            "client_type": ["transactional", "event-driven"],
            "action": {
                "inventory_list": ["request", "response"],
                "commodity_available": ["request", "response", "log_response"],
                "price_ask": ["request", "response", "response_cancel", "log_response",
                    {"trigger":
                        {"topic": "avatar_motion.marketplace",
                            "plan": "commodity_available", "service": "log_response"}}],
                "price_offer": ["request", "response", "log_response",
                    {"trigger":
                        {"topic": "avatar_motion.marketplace",
                            "plan": "price_ask", "service": "log_response"}}],
                "price_agree": ["request", "request_cancel", "response", "log_response",
                    {"trigger":
                        {"topic": "avatar_motion.marketplace",
                            "plan": "price_offer", "service": "log_response"}}],
                "purchase": ["request", "request_cancel", "response", "log_response",
                    {"trigger":
                        {"topic": "avatar_motion.marketplace",
                            "plan": "price_agree", "service": "log_response"}}],
                "transfer": ["request", "response", "log_response",
                    {"trigger":
                        {"topic": "avatar_motion.marketplace",
                            "plan": "price_agree", "service": "log_response"}}]
            }
        },
        "gametime.request_response": {
            "client_type": ["transactional"],
            "action": {
                "get_time": ["request", "response"]}
        },
        "gametime.publish_subscribe": {
            "client_type": ["polling", "event-driven"],
            "action": {
                "subscribe": ["request", "response", "reponse_cancel", "log_response"],
                "notify": ["publish_list"]}
        }
    }
}
