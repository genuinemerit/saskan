#:kivy 2.0.0

# File name: admin.kv
# Configuration for widgets in admin_gui.kv
<AdminManager>:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        AdminToolbox:
            id: _admintoolbox
            size_hint: None, None
            width: 100
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        AdminDisplay:
            id: _displayspace
            size_hint: None, None
            width: root.width - _admintoolbox.width
            height: root.height - _adminoptions.height
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'vertical'
            AdminOptions:
                id: _adminoptions
                size_hint: 1, None
                height: 48
            AdminStatus:
                id: _adminstatus
                size_hint: 1, None
                height: 24
