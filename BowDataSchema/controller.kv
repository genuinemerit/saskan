#:kivy 2.0.0

# File name: controller.kv
# Configuration for widgets in controller_gui.kv
<ControllerManager>:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        BoxLayout:
            orientation: 'vertical'
            ControllerButtons:
                id: _controller_buttons
                size_hint: 1, None
                height: 48
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
        ControllerDisplay:
            id: _controller_display
            size_hint: None, None
            height: root.height - (_controller_buttons.height + _controller_status.height)
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'vertical'
            ControllerStatus:
                id: _controller_status
                size_hint: 1, None
                height: 24
